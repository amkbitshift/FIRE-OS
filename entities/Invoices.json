{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Reference to client"
    },
    "job_id": {
      "type": "string",
      "description": "Reference to job if applicable"
    },
    "invoice_number": {
      "type": "string",
      "description": "Unique invoice number"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "sent",
        "paid",
        "overdue"
      ],
      "default": "draft"
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal amount"
    },
    "tax": {
      "type": "number",
      "default": 0
    },
    "total": {
      "type": "number",
      "description": "Total amount"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "rate": {
            "type": "number"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "invoice_number",
    "date",
    "total"
  ]
}